<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.springframework.org/schema/security
    http://www.springframework.org/schema/security/spring-security-3.1.xsd">

	<http auto-config="true">
		<intercept-url pattern="/admin/**" access="ROLE_ADMIN" />
		<intercept-url pattern="/" access="ROLE_USER,ROLE_ADMIN" />

		<access-denied-handler error-page="/view/layout/403.jsp" />

		<form-login login-page="/login" default-target-url="/admin"
			authentication-failure-url="/login?error" username-parameter="username"
			password-parameter="password" />
		<logout logout-success-url="/login?logout" />
	</http>

	<authentication-manager erase-credentials="false">
		<authentication-provider>
			<user-service>
				<user name="admin" password="123456" authorities="ROLE_ADMIN" />
				<user name="manh" password="123456" authorities="ROLE_USER" />
				<user name="tan" password="123456" authorities="ROLL_USER" />
			</user-service>
		</authentication-provider>
	</authentication-manager>
</beans:beans>