<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<!-- Configure NameSpace for action web -->
	<package name="User" namespace="/users" extends="default-web">
		<action name="{userId}/show" class="springUserAction" method="show">
			<param name="user.userId">{1}</param>
			<result name="success">User.Show</result>
			<result name="error" type="redirect">/</result>
		</action>

		<action name="" class="springUserAction" method="index">
			<result name="success">User.Index</result>
			<result name="error" type="redirect">/</result>
		</action>
	</package>
</struts>