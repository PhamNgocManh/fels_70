<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<!-- Configure NameSpace for action web -->
	<package name="User" namespace="/users" extends="default-web">
		<action name="/*" class="springUserAction" method="findByUserId">
			<param name="user.userId">{1}</param>
			<result name="success">User.Info</result>
			<result name="error">Homepage</result>
		</action>

		<action name="" class="springUserAction" method="showAllUser">
			<result name="success">User.All</result>
			<result name="error">Homepage</result>
		</action>
	</package>
</struts>